{% extends 'base.html.twig' %}

{% block title %}{{"Ajouter un produit" |trans}}{% endblock %}

{% block body %}

    <div style="max-width: 90% ;" class="container">

     {% for message in app.flashes("error") %}
            <div class="alert alert-danger alert-dismissible m-3">
                {{ message }}
                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>

            </div>
        {% endfor %}


     <h1 class='titre-page'>{% trans %}Ajouter un produit{% endtrans %}</h1>

    {{ include('produit/_form.html.twig') }}

    <script>
        // Petit script qui ajoute un asterisque  en fin de label pour les champs obligatoires
       var labels = document.getElementsByTagName('label');
       for (var i = 0; i < labels.length; i++) {
           if (labels[i].htmlFor != '') {
               var elem = document.getElementById(labels[i].htmlFor);
               if (elem.required) {
                   labels[i].innerHTML += ' <span class="text-danger">*</span>';
               }
           }
       }
   
   </script>
   
   <p> <span class="text-danger">*</span> {{ 'Champs obligatoires'|trans }}</p>
</div>
