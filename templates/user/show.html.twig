{% extends 'base.html.twig' %}

{% block title %}{{ "Employé" |trans }}{% endblock %}

{% block body %}
    <div class="container">
        <h1 class="titre-page">{{ "Employé" |trans }}</h1>

        {{ form_start(editProfileForm) }}
        <div class="row">
            <div class="col">
                {{ form_row(editProfileForm.nom, {
                    label: 'Nom'|trans,
                    disabled : true


                }) }}
            </div>

            <div class="col">
                {{ form_row(editProfileForm.prenom, {
                    label: 'Prénom'|trans,
                    disabled: true
                }) }}
            </div>

            {{ form_row(editProfileForm.date_naissance, {
                label: 'Date de naissance'|trans,
                disabled: true
            }) }}

            <div>
                {{ form_row(editProfileForm.email, {
                    label: 'Mail'|trans,
                    disabled: true
                }) }}
            </div>

            <div class="col">
                {{ form_row(editProfileForm.service, {
                    label: 'Service'|trans
                }) }}
            </div>

            <div class="col">
                {{ form_row(editProfileForm.fonction, {
                    label: 'Fonction'|trans,
                }) }}
            </div>

            <div style="display: none">
                <div>
                    {{ form_row(editProfileForm.submitmodif, {
                        label: 'Modifier'|trans
                    }) }}
                </div>
            </div>
            <div class="d-flex justify-content-center">
                <a href="{{ path('user_edit', {'id': user.id}) }}" class="btn btn-outline-warning m-2">{{ 'Modifier'|trans }}</a>
               <a href="{{ path('app_user_index') }}" class="btn btn-outline-secondary m-2">{{ 'Retour à la liste'|trans }}</a>
            </div>

        </div>
        {{ form_end(editProfileForm) }}
    </div>
{% endblock %}
