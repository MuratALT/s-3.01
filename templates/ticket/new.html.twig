{% extends 'base.html.twig' %}

{% block title %}{{"Nouveau ticket" | trans}}{% endblock %}
{% block body %}
    <div class="container">
        {% for message in app.flashes("error") %}
            <div class="alert alert-danger m-5 alert-dismissible">
                {{ message }}
                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
            </div>
        {% endfor %}
        <h1 style="font-family : Sen-Regular-Bold" class="text-center titre-page">{{"Création d'un ticket" |trans}}</h1>

        {{ form_start(form )}}

        <div class="container">
            <div class="row">
                <div class="col">
                    {{ form_row(form.produit) }}
                </div>
            </div>
        </div>

        {{ form_row(form.commentaire) }}
        <br>

        <div class="d-flex justify-content-center">
            <button type="submit" class="btn btn-success center m-2 submit">
                {{"Créer le ticket" |trans}}
            </button>


        </div>
        {{ form_end(form )}}

    </div>

{% endblock %}