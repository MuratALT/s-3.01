{% extends 'base.html.twig' %}



{% block title %}{{"Les départements" |trans}}{% endblock %}

{% block body %}
<div class="container">
    <h1 class="titre-page">{{"Les départements"|trans}}</h1>

    {% for message in app.flashes("success") %}
    <div class="alert alert-success alert-dismissible m-3">
        {{ message }}
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>

    </div>
    {% endfor %}
    <p>&nbsp</p>
    <div class="container">
    <div class="introduction_accueil">
    <p>{{"Retrouvez ici tous les départements présents au sein de l'entreprise" | trans}} : </p>

    <div class="d-flex flex-row-reverse mb-2">
        <a  style="color : white ; font-weight: bold ; font-family : Sen-Regular-Bold "href="{{ path("app_service_new") }}" class="btn btn-outline-success ml-2 ">{{"AJOUTER UN SERVICE"|trans}}</a>
    </div><br /> 

    <table class="table table_select_event text-light" id="table_select_event" style = "border: 2px solid white">
        <thead style="font-family:Sen-Regular-ExtraBold">    
            <tr>
                <th>{{"Libellé"|trans}}</th>
                <th>{{"Actions"|trans}}</th>
            </tr>
        </thead>
        <tbody class="center">
        {% for service in services %}
            <tr>
                <td>{{ service.libelle }}</td>
                <td class="text-center">
                    <div id = "div-action">
                        <a style="color : white ; font-weight: bold ; font-family : Sen-Regular-Bold ;" class="btn btn-outline-info mr-1" href="{{ path('app_service_edit', {'id': service.id}) }}">{{"MODIFIER"|trans}}</a> 
                        <a onclick="return confirm('Voulez-vous vraiment supprimer ce produit ?');" style="color : white ; font-weight: bold ; font-family : Sen-Regular-Bold" class="btn btn-outline-danger mr-1" href="{{ path('app_service_delete', {'id': service.id}) }}">{{"SUPPRIMER" |trans}}</a>
                        <a style="color : white ; font-weight: bold ; font-family : Sen-Regular-Bold ;" class="btn btn-warning mr-1" href="{{ path('admin_app_usurpation', {'id': service.id}) }}">{{"USURPER"|trans}}</a>

                    </div>
                </td>
            </tr>
        {% else %}
            <tr>
                <tr><td class="center"colspan='2'> {{"Service non trouvé dans la base de données" |trans }}</td></tr>
            </tr>
        {% endfor %}
        </tbody>
    </table>


{% endblock %}
